@import "./mixin"

a
    color cBlue

.btn
    box-sizing border-box
    display inline-block
    hh(btnHeight)
    text-decoration none
    padding 0 14px
    vertical-align middle
    font-size btnFontSize
    border-radius 4px
    border 1px solid cBlue + 50%
    background cBlue + 95%
    color cBlue

    &:hover
        background cBlue + 80%


.plain-btn
    display inline-block
    hh(btnHeight)
    margin 0 8px 8px 0
    text-decoration none
    font-size btnFontSize

    &:hover
        text-decoration underline

.btn-separator
    display inline-block
    margin 0 8px
    height 8px
    width 8px
    border-radius 4px
    background cInputBorder
    vertical-align middle

input[type="text"]
input[type="password"]
input[type="number"]
select
    box-sizing border-box
    display inline-block
    hh(inputHeight)
    border 1px solid cInputBorder
    padding 0 4px
    vertical-align middle
    font-size inputFontSize
    border-radius 4px

input[type="checkbox"]
input[type="radio"]
    display inline-block
    hh(inputHeight)
    vertical-align middle
    
table.simple
    th, td
        padding 8px 12px
        border-top 1px solid cTableBorder
        border-bottom 1px solid cTableBorder
