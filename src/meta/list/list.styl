@import "../../mixin"

.page.page-list-meta
    font-size 13px

    .page-actions
        padding-bottom 16px

        .search
            width 300px

        .add-entity
            float right
            width 120px
            text-align center

    .group
        margin 16px 0

    .group-name
        color cRed
        font-size 16px

    .entity
        display inline-block
        vertical-align top
        border 1px solid cBorder
        border-radius 4px
        width 260px
        margin 8px 4px

        &:hover
            background cBlue0

    .entity-label, .entity-name
        display block
        padding 0 8px
        hh(36px)
        border-bottom 1px solid cBorder
        text-decoration none
        color #000
        letter-spacing 1px

    .entity-label .iconfont
        margin-right 8px
        color cBlue

        *
            vertical-align top

    .entity-actions
        padding 0 8px
        font-size 12px
        hh(24px)
        opacity .7

        a.remove-entity
            color cRed
            float right

