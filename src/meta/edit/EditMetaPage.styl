@import "../../mixin"

.page-parent>.page.page-edit-meta
    actionsHeight = 60px

    position relative
    box-sizing border-box
    height 100%
    overflow hidden

    .entity-form.mc-form
        box-sizing border-box
        height 100%
        overflow auto
        padding-bottom actionsHeight

    .page-actions
        absolute(auto, 0, 0, 0)
        z-index 10
        background #fff
        text-align center
        hh(actionsHeight)
        border-top 1px solid cBorder
        box-shadow 0 -1px 2px cBorder

        .btn
            hh(36px)
            width 250px
            font-size 14px
