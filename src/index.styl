@import "./mixin"

html, body
    height 100%

::-webkit-scrollbar
    width 10px
    height 18px

::-webkit-scrollbar-thumb
    height 6px
    border 2px solid rgba(#aaa, 0)
    background-clip padding-box
    border-radius 0px
    background-color rgba(#888, 0.15)
    box-shadow inset -1px -1px 0px rgba(0, 0, 0, 0.05), inset 1px 1px 0px rgba(0, 0, 0, 0.05)

::-webkit-scrollbar-button
    width 0
    height 0
    display none

::-webkit-scrollbar-corner
    background-color transparent

.main-menu-bar-parent
    absolute(0, auto, 0, 0)
    box-sizing border-box
    width menuBarLeft
    border-right 1px solid borderColor
    overflow auto

    >.user-area
        position relative
        display block
        margin 8px 8px
        padding 0
        width auto
        textOverflow()

        .iconfont, .site-username
            display block
            font-size 13px
            text-decoration none

        .icon-user
            absolute(0, auto, 0, 0)
            z-index 1
            width 28px
            text-align center

        .site-username
            padding 0 32px 0 32px
            position relative
            top -1px
            
        .exit-site
            absolute(0, 0, 0, auto)
            z-index 1
            width 28px
            border-left 1px solid cBorderRed
            color cRed
            text-align center


.main-header
    headerBtnWidth = 48px

    fixed(0, 0, auto, menuBarLeft)
    hh(siteHeaderHeight)
    border-bottom 1px solid cBorder
    background #fff
    z-index 100

    .main-menu-btn
        absolute(0, auto, 0, auto)
        display block
        text-align center
        width headerBtnWidth
        text-decoration none
        color cBlue
        left 0
        border-right 1px solid cBorder

    .pages-switches
        absolute(0, 0, 0, headerBtnWidth)
        z-index 50
        padding 0 6px
        overflow hidden

    .page-switch
        switchHeight = siteHeaderHeight - 16px
        display inline-block
        box-sizing border-box
        hh(switchHeight)
        margin 8px 3px
        font-size 12px
        text-decoration none
        color cText
        background #f1f1f1
        border-radius 6px
        vertical-align top
        padding-left 8px

        .title
            display inline-block
            width 80px
            textOverflow()
            text-align center
            vertical-align top

        .close-page
            display inline-block
            margin-left 8px
            border-left 1px solid rgba(#fff, .6)
            padding 0 8px
            vertical-align top
            font-size 16px
            position relative
            top -1px

        &.current
            color #fff
            background cBlue

.pages
    absolute(0, 0, 0, menuBarLeft)
    box-sizing border-box
    height 100%
    padding-top siteHeaderHeight

    .page-parent
        height 100%
        overflow auto

        >.page
            position relative
            padding 24px
    
.page.page-not-found
    padding 64px 0
    text-align center
    font-size 24px
