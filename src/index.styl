@import "./mixin"

html, body
    height 100%

::-webkit-scrollbar
    width 10px
    height 12px

::-webkit-scrollbar-thumb
    height 6px
    border 2px solid rgba(#aaa, 0)
    background-clip padding-box
    border-radius 0px
    background-color rgba(#888, 0.15)
    box-shadow inset -1px -1px 0px rgba(0, 0, 0, 0.05), inset 1px 1px 0px rgba(0, 0, 0, 0.05)

::-webkit-scrollbar-button
    width 0
    height 0
    display none

::-webkit-scrollbar-corner
    background-color transparent

.main-header
    headerBtnWidth = 48px

    fixed(0, 0, auto, 0)
    hh(siteHeaderHeight)
    border-bottom 1px solid cBorder
    background #fff
    z-index 100

    .main-menu-btn, .main-settings
        absolute(0, auto, 0, auto)
        display block
        text-align center
        width headerBtnWidth
        text-decoration none
        color cBlue

    .main-menu-btn
        left 0
        border-right 1px solid cBorder

    .main-settings
        right 0
        border-left 1px solid cBorder

    .pages-switches
        absolute(0, headerBtnWidth, 0, headerBtnWidth)
        z-index 50
        padding 0 6px
        overflow hidden

    .page-switch
        switchHeight = siteHeaderHeight - 16px
        display inline-block
        box-sizing border-box
        hh(switchHeight)
        margin 8px 3px
        font-size 12px
        text-decoration none
        color cText
        background #f1f1f1
        border-radius 6px
        vertical-align top
        padding-left 8px

        .title
            display inline-block
            width 80px
            textOverflow()
            text-align center
            vertical-align top

        .close-page
            display inline-block
            margin-left 8px
            border-left 1px solid rgba(#fff, .6)
            padding 0 8px
            vertical-align top
            font-size 16px
            position relative
            top -1px

        &.current
            color #fff
            background cBlue

.main-body
    position relative
    box-sizing border-box
    height 100%
    padding-top siteHeaderHeight

    .main-menu-bar
        absolute(siteHeaderHeight, auto, 0, 0)
        box-sizing border-box
        width menuBarLeft
        border-right 1px solid borderColor
    
    >.pages
        absolute(siteHeaderHeight, 0, 0, menuBarLeft)

    .page-parent
        height 100%
        overflow auto

        .view, .page
            padding 32px

            .page-top-actions
                margin-bottom 32px

    
.page.page-not-found
    padding 64px 0
    text-align center
    font-size 24px
