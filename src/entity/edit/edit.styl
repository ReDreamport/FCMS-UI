@import "../../mixin"
    
.page.page-edit-entity
    .field >.label-area >.label
        font-weight 500
        font-size 14px

    .multiple-input.for-wide .multiple-input-item
        display block
        width 100%
        margin-right 0

        .field-input-parent
            width auto

    .multiple-input.for-fit .multiple-input-item
        width auto

        .field-input-parent
            width auto

    .check-list
        label
            display inline-block
            margin 0 16px 8px 0

            input, span
                vertical-align middle
            
            input
                margin-right 4px
        