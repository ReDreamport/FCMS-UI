@import "../../mixin"

.page.page-edit-entity
    removeBtnWidth = 24px
    moveHandleWidth = 24px

    .field >.label-area >.label
        font-weight 500

    .multiple-input .multiple-input-item
        position relative
        display inline-block
        vertical-align top
        width fieldWidthOne
        padding-bottom fieldItemSpace // 项之间的距离
        margin-right fieldItemSpace

        .field-input-parent
            display block
            width (fieldWidthOne - removeBtnWidth - moveHandleWidth)
            margin 0 removeBtnWidth 0 moveHandleWidth
            
        .remove-m-input-item, .move-handle
            position absolute
            z-index 10
            display block
            top 0
            hh(inputHeight)
            text-align center
            text-decoration none
            color cBlue

        .move-handle
            width moveHandleWidth
            left 0
            
            &:hover
                cursor move
                color cGreen

        .remove-m-input-item
            width removeBtnWidth
            right  0

    .multiple-input.for-wide .multiple-input-item
        display block
        width 100%
        margin-right 0

        .field-input-parent
            width auto
            margin 0 removeBtnWidth 0 moveHandleWidth

    .multiple-input.for-fit .multiple-input-item
        width auto

        .field-input-parent
            width auto

    .check-list
        label
            display inline-block
            margin 0 16px 8px 0

            input, span
                vertical-align middle
            
            input
                margin-right 4px
        