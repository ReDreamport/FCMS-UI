@import "../../mixin"
    
.page-parent>.page.page-edit-entity
    actionsHeight = 60px
    historyWidth = 320px

    box-sizing border-box
    height 100%
    overflow hidden

    .history
        absolute(0, 0, actionsHeight, auto)
        border-left 1px solid cBorder
        z-index 10
        width historyWidth
        background #f6f6f6

    .history-title
        text-align center
        font-size 14px
        padding 8px
        color cRed

    .entity-history-list
        padding 8px
        font-size 12px
        font-family Courier New, Courier, monospace
        overflow auto

        table
            width 100%
        
        td, th
            height auto
            line-height 18px
            border-bottom 1px solid #ddd

        .icon-iconNow
            display none
            font-size 14px

        tr:hover
            cursor pointer

        tr.current
            td
                color cRed

            .icon-iconNow
                display block

    .entity-edit-form.mc-form
        box-sizing border-box
        height 100%
        overflow auto
        padding 0 historyWidth actionsHeight 0

    .page-actions
        absolute(auto, 0, 0, 0)
        z-index 20
        background #fff
        text-align center
        hh(actionsHeight)
        border-top 1px solid cBorder

        .btn
            hh(36px)
            width 250px
            font-size 14px

    .field >.label-area >.label
        font-weight 500
        font-size 14px

    .multiple-input.for-wide .multiple-input-item
        display block
        width 100%
        margin-right 0

        .field-input-parent
            width auto

    .multiple-input.for-fit .multiple-input-item
        width auto

        .field-input-parent
            width auto

    .check-list
        label
            display inline-block
            margin 0 16px 8px 0

            input, span
                vertical-align middle
            
            input
                margin-right 4px
        