@import "../../mixin"

.entity-criteria-area
    position relative
    font-size 12px
    background cBlue0
    border 1px solid cBlue0 - 5%
    border-radius 4px

    .details
        padding 8px

    .add-item
        display block
        width 100%
        text-align center
        border none
        margin 6px auto

    .entity-criteria-item
        margin-bottom 8px

        .field-name-col
        .operator-col
        .criteria-value-col
        .remove-item
            box-sizing border-box
            display inline-block
            vertical-align top
        
        .remove-item
            width 5%
            text-align right
            font-size 16px

        .field-name-col
            width 17%
            padding-right 8px
            
            .field-name
                width 100%
                
        .operator-col
            width 15%
            padding-right 8px
            
            .operator
                width 100%

        .criteria-value-col
            width 63%

        .add-value-item
            display inline-block
            hh(22px)
            margin ((btnHeight - 22px) / 2) 0
            font-size 12px
            padding 0 6px
            border-radius 8px

            &:before
                position relative
                top -1px
