if user.admin
    .menu-group
        .menu-group-title Menu
        a.menu-item.to-list-entity(href="#!list/F_Menu") 菜单
        
each mg in menuGroups
    .menu-group
        if mg.label
            .menu-group-title=mg.label
        each mi in mg.menuItems
            if mi.toEntity
                -var em = meta.entities[mi.toEntity]
                if em
                    a.menu-item.to-list-entity(href="#!list/" + mi.toEntity)= mi.label
            else if mi.callFunc
                a.menu-item.call-func(href="javascript:", func=mi.callFunc)= mi.label

